<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox fx:id="taskBox" prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.curtis.javafx.TasksController">
   <children>
      <TabPane fx:id="taskTabs" prefHeight="700.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="convertTab" text="Convert">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
          <Tab fx:id="settingsTab" text="Settings">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="statusButton" mnemonicParsing="false" onAction="#handleButtonAction" text="Display Status" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="tablesTab" text="Tables">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
            <Tab fx:id="lyPdfTab" text="Lilypond/Pdf">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <ScrollPane fx:id="statusPane" fitToHeight="true" fitToWidth="true">
         <content>
            <TextArea fx:id="statusTextArea" editable="false" prefHeight="100.0" prefWidth="600.0" />
         </content>
      </ScrollPane>
   </children>
</VBox>
